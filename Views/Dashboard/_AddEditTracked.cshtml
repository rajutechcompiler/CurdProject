@using TabFusionRMS.WebCS.Controllers;
@using TabFusionRMS.Resource;
<form  class="form-horizontal" id="frmAddEditTracked" role="form" ReturnUrl = ViewData("ReturnUrl") class = "form-horizontal">
<div class="modal fade in form-horizontal" id="modalTracked" tabindex="-1" role="dialog" aria-labelledby="myModalTracked">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="titleAddEditTracked">@Languages.get_Translation("addbarChartObjectsTrackedByDay")</h4>
                    <input type="hidden" value="0" id="hiddenTrackedWidgetId" />
                </div>
                <div class="modal-body row-44">
                    <fieldset class="admin_fieldset">
                        <legend>@Languages.get_Translation("widgetInformation")</legend>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label" for="UserName">@Languages.get_Translation("widgetName")</label>
                                    <div class="col-sm-8">
                                        <input autofocus="" class="form-control" id="trackedWidgetName" name="trackedWidgetName" placeholder="@Languages.get_Translation("widgetName")" required type="text" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label" for="lstView">@Languages.get_Translation("objectTable")</label>
                                    <div class="col-sm-8 multiselect-div">
                                        <select id="trackedListTable" name="trackedListTable" class="form-control example-getting-started caretselect" multiple="multiple" data-mdb-visible-options="3">
                                            @foreach(var item in @ViewBag.TrackableTable)
                                            {
                                                <option value="@item.Id">@item.UserName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        
                                    </div>
                                    <div class="col-sm-8">
                                        <span for="trackedListTable" class="help-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label" for="lstView">@Languages.get_Translation("GroupBy")</label>
                                    <div class="col-sm-8">
                                        <select id="trackedlstfilter" name="trackedlstfilter" class="form-control caretselect">
                                            <option value="" selected></option>
                                            <option value="hour">Hour</option>
                                            <option value="day">Day</option>
                                            <option value="week">Week</option>
                                            <option value="month">Month</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label" for="lstView">@Languages.get_Translation("period")</label>
                                    <div class="col-sm-8">
                                        <select id="trackedlstPeriod" name="trackedlstPeriod" class="form-control caretselect">
                                            <option value="" selected></option>
                                            <option value="1">Last 7 Days</option>
                                            <option value="2">Last 30 Days</option>
                                            <option value="3">Last 90 Days</option>>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label" for="lstView">@Languages.get_Translation("refresh")</label>
                                    <div class="col-sm-8">
                                        <select id="trackedRefreshTime" name="trackedRefreshTime" class="form-control caretselect">
                                            <option value="0" selected>Manual Refresh</option>
                                            <option value="5">5 minutes</option>
                                            <option value="10">10 minutes</option>
                                            <option value="15">15 minutes</option>
                                            <option value="20">20 minutes</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" style="float:right;">@Languages.get_Translation("Cancel")</button>
                    <button id="btnObjectsTrackedChart" type="button" class="btn btn-primary" style="float:right; margin-right:5px;">@Languages.get_Translation("Add")</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</form>

<script>
    dashboardfunc.PreventEnter();
</script>
