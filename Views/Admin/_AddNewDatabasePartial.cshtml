@using TabFusionRMS.Resource
@using TabFusionRMS.Models
@model Databas

@*@Using Html.BeginForm(Nothing, Nothing, FormMethod.Post, New With {.id = "frmAddNewDb", .ReturnUrl = ViewData("ReturnUrl")})*@
<form id="frmAddNewDb" name="frmAddNewDb" method="post" ReturnUrl = '@ViewData["ReturnUrl"]'>
    <div class="modal fade" id="mdlAddDatabase" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabelAdd"></h4>
                </div>

                <!-- Text input-->
                <div class="modal-body">
                    @Html.HiddenFor((m)=> m.Id, new{id = "Id", name = "Id"})
                    @*<input type="hidden" id="Id" name="Id"  />*@
                    <div class="form-group row">
                        <label class="col-sm-4 control-label" for="txtConnectName">@Languages.get_Translation("lblAddNewDatabasePartialConnName")</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor((m)=> m.DBName, new{@class = "form-control", id = "txtConnectName", name = "txtConnectName", type = "text", autofocus = ""})
                            @*<input type="text" class="form-control" id="txtConnectName" name="txtConnectName" autofocus=""/>*@
                            <!--<input id="txtConnectName" name="txtConnectName" type="text" placeholder="" class="form-control input-md" />-->
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group row">
                        <label class="col-sm-4 control-label" for="lstServerName">@Languages.get_Translation("lblAddNewDatabasePartialServerName")</label>
                        <div class="col-sm-8">
                            <select id="DBServer" name="DBServer" class="form-control"></select>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group row">
                        <label class="col-sm-4 control-label" for="txtUserID">@Languages.get_Translation("lblAddNewDatabasePartialUserId")</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor((m)=> m.DBUserId, new{@class = "form-control", id = "txtUserID", name = "txtUserID", type = "text", autofocus = ""})
                            @*<input type="text" class="form-control" id="txtUserID" autofocus="" name="txtUserID"/>*@
                            @*<input id="txtUserID" name="txtUserID" type="text" placeholder="" class="form-control input-md" />*@
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group row">
                        <label class="col-sm-4 control-label" for="txtPwd">@Languages.get_Translation("Password") :</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor((m)=> m.DBPassword,new{@class = "form-control", id = "txtPwd", name = "txtPwd", type = "password", autofocus = ""})
                            @*<input type="password"  class="form-control" id="txtPwd" name="txtPwd" autofocus="" />*@
                            @*<input id="txtPwd" name="txtPwd" type="password" placeholder="" class="form-control input-md" />*@
                        </div>
                    </div>

                    <!-- Select Basic -->
                    <div class="form-group row">
                        <label class="col-md-4 control-label" for="lstDB">@Languages.get_Translation("lblAddNewDatabasePartialDatabase") :</label>
                        <div class="col-md-6 col-sm-6">
                            <select id="DBDatabase" name="DBDatabase" class="form-control"></select>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group row">
                        <label class="col-md-4 control-label" for="txtConTimeOut">@Languages.get_Translation("lblAddNewDatabasePartialConnTymOut")</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor((m)=> m.DBConnectionTimeout, new{@class = "form-control", id = "txtConTimeOut", name = "txtConTimeOut", type = "number", autofocus = ""})
                            @*<input type="number" class="form-control" id="txtConTimeOut" nname="txtConTimeOut" autofocus="" />*@
                            @*<input id="txtConTimeOut" name="txtConTimeOut" type="number" placeholder="" class="form-control input-md" />*@
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSaveDB" type="button" class="btn btn-primary">@Languages.get_Translation("Ok")</button>
                    <button id="btnCancelDB" type="button" class="btn btn-primary" aria-hidden="true">@Languages.get_Translation("Cancel")</button>
                </div>
            </div>
        </div>
    </div>
</form>
