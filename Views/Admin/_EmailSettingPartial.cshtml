@using TabFusionRMS.Resource
@model  TabFusionRMS.Models.System

<div class="modal fade" id="mdlEmailDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel">@Languages.get_Translation("tiEmailSettingsTitle")</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="UserName">@Languages.get_Translation("Username") :</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor((m)=> m.SMTPUserAddress,new{@class = "form-control", placeholder = Languages.get_Translation("Username"), autofocus = ""})
                               @* <input type="text" class="form-control" id="SMTPUserAddress" name="SMTPUserAddress" placeholder = '@Languages.get_Translation("Username")' autofocus=""/>*@
                                <span id="user_validate" hidden="hidden">@Languages.get_Translation("msgEmailSettingsUserNameRequired")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="Password">@Languages.get_Translation("Password") :</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor((m)=> m.SMTPUserPassword,new{type = "password", @class = "form-control", placeholder = Languages.get_Translation("password"), autofocus = ""})
                              @* <input type="password" class="form-control" id="SMTPUserPassword" name="SMTPUserPassword" placeholder = '@Languages.get_Translation("Password")' autofocus=""/>*@
                                <span id="pwd_validate" hidden="hidden">@Languages.get_Translation("msgEmailSettingsPasswordRequired")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnOk" type="button" class="btn btn-primary" data-dismiss="modal">@Languages.get_Translation("Ok")</button>
                <button id="btnCancel" type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">@Languages.get_Translation("Cancel")</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
