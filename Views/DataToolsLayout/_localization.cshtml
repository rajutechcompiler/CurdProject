@using TabFusionRMS.Resource
<input type="hidden" value="@Model.Title" id="titleid" />
<input type="hidden" value="@Model.objLocalization.pLocData" id="pDateChosen" />
<input type="hidden" value="@Model.objLocalization.resouceObjectLenguage" id="Reslanguages" />
<input type="hidden" value="@Model.objLocalization.SelectedCountry" id="selectedCountry" />

<link href="~/Content/themes/TAB/css/flags.css" rel="stylesheet" />

<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="userLangSelect">@Languages.get_Translation("lblLocalizePartialLanguage")</label>
            <div class="col-md-4">
                <div class="btn-group">
                    <div id="userLangSelect" data-input-name="country" style="width: 100% !important"></div>
                    <input type="hidden" id="hiddenSelLangValue" value="" />
                </div>
            </div>
        </div>
        <div class="form-group row top_space">
            <label class="col-sm-3 control-label" for="PrefDateForm">@Languages.get_Translation("lblLocalizePartialDateFormat")</label>
            <div class="col-md-4">
                <select class="chosen-select"id="optdatetime" style="width:206px">
                    @foreach( var m in Model.ListLocalization) {
                        <option value="@m.LookupTypeCode">@m.LookupTypeValue</option>
                    }
                    @*<li class="active-result result-selected" data-option-array-index="3" style="">dd/MMM/yyyy</li>*@
                </select>
                <span Id="optdatetimeRequired" style="display:none; font-weight:bold;color:red">*</span>
                <p Id="RequiredFieldValidator1" style="font-weight:bold;color:red"></p>
            </div>
        </div>
    </div>
</div>

<div Class="modal-footer">
    <Button onclick="toolsmodel.DialogRun(ids.Tools)" Class="btn btn-default" data-dismiss="modal" style="float:right">@Languages.get_Translation("Cancel")</Button>
    <Button onclick="toolsmodel.LocalizationSaveClick()" Id="btnSaveLocData" Class="btn btn-success" style="float:right; margin-right:5px">@Languages.get_Translation("Apply")</Button>
</div>

